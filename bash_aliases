# git aliases
alias gs='git status'
alias gd='git difftool'
alias gca='git add -A && git commit'
alias gp='git pull'
alias gP='git push'
alias gc='git checkout'
alias gcb='git checkout branch'
alias gcm='git checkout master'
alias gm='git merge'
alias gbd='git branch -d'
alias gba='git branch -a'

# Spotify alias
