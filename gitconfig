[color "status"]
	untracked = white
	changed = white normal dim
	nobranch = red bold ul
[color "diff"]
	old = yellow reverse dim
[diff]
	guitool = meld
	tool = vimdiff
[difftool]
	prompt = false
[core]
	editor = vim
	excludesfile = /home/scwfri/.gitignore
[user]
	email = scwfri@gmail.com
	name = scwfri
[pull]
	rebase = false
[alias]
	s = status -sb
    b = branch
    ll = log --graph --oneline --decorate --all
    llg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lf = log -p --pretty=fuller --abbrev-commit
    l = log --pretty=fuller --abbrev-commit --stat
